<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
                <LinearLayout
                	android:id="@+id/tableRow1"
                	android:layout_width="fill_parent"
                	android:layout_height="wrap_content">

	        		<Button android:id="@+id/btn_launch_oauth"
			            android:layout_width="fill_parent"
			            android:layout_height="wrap_content"
			            android:layout_weight="2"
			            android:text="Auth"/>

				    <Button android:id="@+id/btn_clear_credentials"
				            android:layout_width="fill_parent"
				            android:layout_height="wrap_content"
				            android:layout_weight="1"
				            android:text="Clear"/>	 		        			
                </LinearLayout>
                <LinearLayout
                	android:id="@+id/tableRow1"
                	android:layout_width="fill_parent"
                	android:layout_height="wrap_content">

		            <TextView android:id="@+id/label"
		                android:layout_width="fill_parent"
		                android:layout_height="wrap_content"
		                android:text="Latitude"
		                android:layout_weight="2"
					    android:typeface="normal"/>  

		            <TextView android:id="@+id/latitude_loc"
		                android:layout_width="fill_parent"
		                android:layout_height="wrap_content"
		                android:text="Latitude val"
		                android:layout_weight="1"
					    android:typeface="normal"/>  
				</LinearLayout>
				<LinearLayout
                	android:id="@+id/tableRow1"
                	android:layout_width="fill_parent"
                	android:layout_height="wrap_content">
		
		            <TextView android:id="@+id/label"
		                android:layout_width="fill_parent"
		                android:layout_height="wrap_content"
		                android:text="Cell"
		                android:layout_weight="2"
					    android:typeface="normal"/>
		
		            <TextView android:id="@+id/cell_loc"
		                android:layout_width="fill_parent"
		                android:layout_height="wrap_content"
		                android:text="Cell val"
		                android:layout_weight="1"
					    android:typeface="normal"/>
				</LinearLayout>
				<LinearLayout
                	android:id="@+id/tableRow1"
                	android:layout_width="fill_parent"
                	android:layout_height="wrap_content">

		            <TextView android:id="@+id/label"
		                android:layout_width="fill_parent"
		                android:layout_height="wrap_content"
		                android:text="Status"
		                android:layout_weight="2"
					    android:typeface="normal"/>  

		            <TextView android:id="@+id/response_code"
		                android:layout_width="fill_parent"
		                android:layout_height="wrap_content"
		                android:text="Latitude val"
		                android:layout_weight="1"
					    android:typeface="normal"/>  

				</LinearLayout>
				<LinearLayout
                	android:id="@+id/tableRow1"
                	android:layout_width="fill_parent"
                	android:layout_height="wrap_content">
		
		            <TextView android:id="@+id/label"
		                android:layout_width="fill_parent"
		                android:layout_height="wrap_content"
		                android:text="Service"
		                android:layout_weight="2"
					    android:typeface="normal"/>
		
		            <TextView android:id="@+id/service_status"
		                android:layout_width="fill_parent"
		                android:layout_height="wrap_content"
		                android:text="Service val"
		                android:layout_weight="1"
					    android:typeface="normal"/>
			</LinearLayout> 

</LinearLayout>
